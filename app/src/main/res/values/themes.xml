<resources>
    <!-- Base application theme. -->
    <style name="Theme.Ablaufdaten" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Ablaufdaten.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/ModalTheme</item>
    </style>

    <style name="ModalTheme" parent="Widget.Material3.BottomSheet.Modal">
        <item name="android:background">@drawable/background_rounded_dialog</item>
    </style>

    <style name="Theme.Ablaufdaten.PopupOverlay" parent="ThemeOverlay.Material3" />
</resources>